{% extends '::base.html.twig' %}

{% block body -%}
    <em>User : {{ user }}</em>
    <h1>Url list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Token</th>
                <th>Url</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('url_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.token }}</td>
                <td>{{ entity.url }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('url_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('url_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('url_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
